@model MVC.ViewModels.PaginationViewModel
<div class="d-flex justify-content-center">
  <nav aria-label="Pagination">
    <ul class="pagination pg-blue">
       
      @if (Model.List.HasPrevious)
      {
        <li class="page-item ">
          <a class="page-link" asp-all-route-data="Model.RouteData" asp-route-pagina="@(Model.List.CurrentPage - 1)" tabindex="-1" title="Anterior">
            <span>&laquo;</span>
          </a>
        </li>
      }
      
      @for (var i = 1; i <= Model.List.TotalPages; i++)
      {
        <li class="page-item @(i == Model.List.CurrentPage ? "active" : "")">
          <a asp-all-route-data="Model.RouteData" asp-route-pagina="@i" class="page-link">@i</a>
        </li>
      }
      
      @if (Model.List.HasNext)
      {
        <li class="page-item ">
          <a class="page-link" title="Próximo" asp-all-route-data="Model.RouteData" asp-route-pagina="@(Model.List.CurrentPage + 1)">
            <span>&raquo;</span>
          </a>
        </li>
      }
      
    </ul>
  </nav>
</div>