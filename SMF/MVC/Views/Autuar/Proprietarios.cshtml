@model IEnumerable<Domain.Entities.Pessoa>

@{
    ViewData["Title"] = "Proprietarios";
}

<h4>Proprietarios</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
