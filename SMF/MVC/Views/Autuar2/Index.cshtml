@model MVC.ViewModels.ImovelViewModel
<div class="card">
    <div class="card-header">
        <h4>Buscar Imóvel</h4>
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form asp-action="Imovel" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="ImovelId" class="form-control" autocomplete="matricula" aria-required="true" placeholder="Inscrição Imobiliária" />
                        <label asp-for="ImovelId" class="form-label">Inscrição Imobiliária</label>
                        <span asp-validation-for="ImovelId" class="text-danger"></span>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>