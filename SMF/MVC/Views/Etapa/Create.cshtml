</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

                document.getElementById('TipoProcessoId').addEventListener('change', function () {
                var TipoProcessoId = this.value;

                // Fazer a chamada AJAX
                var xhr = new XMLHttpRequest();
                xhr.open('GET', '/Etapa/Create?TipoProcessoId=' + TipoProcessoId, true);
                xhr.onload = function () {
                    if (xhr.status >= 200 && xhr.status < 400) {
                        // Processar a resposta JSON recebida do servidor
                        var options = JSON.parse(xhr.responseText);

                        // Atualizar o segundo select com as novas opções
                        var FluxoProcessoId = document.getElementById('FluxoProcessoId');
                        FluxoProcessoId.innerHTML = '';

                        for (var i = 0; i < options.length; i++) {
                            var option = document.createElement('option');
                            option.value = options[i].value;
                            option.text = options[i].text;
                            FluxoProcessoId.appendChild(option);
                        }
                    }
                };
                   xhr.send();
                });
    </script>
}
